<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/GameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="MemoryChallenge"
            android:textSize="36sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:shadowColor="#40000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <Button
            android:id="@+id/playButton"
            style="@style/MenuButton"
            android:text="Jouer"
            android:background="@drawable/button_shape_menu"
            android:backgroundTint="@color/menuButtonStart"/>

        <Button
            android:id="@+id/leaderboardButton"
            style="@style/MenuButton"
            android:text="Classement"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_shape_menu"
            android:backgroundTint="@color/menuButtonScore"/>

    </LinearLayout>
</RelativeLayout>
